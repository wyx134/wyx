#include <stdio.h>
#include <math.h>

int asdf(int x);

int main(void) {
    int n;
    int p,q;
    scanf("%d", &n);
    printf("%d = ",n);
    for(p=2,q=n-2;p<=q;p++,q--){
        if(asdf(p)&&asdf(q)){
            printf("%d + %d\n",p,q);
            break;
        }
    }
    return 0;
}




int asdf(int x) {
    int flag = 1, i = 0;
    if(x%2 == 0 && x != 2||x==1) {
        flag = 0;
    }
    for(i = 3; i <= sqrt(x); i += 2) {
        if(x%i == 0) {
            flag = 0;
            break;
        }
    }
    return flag;
}
